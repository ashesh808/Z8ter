{% macro Header() -%}
<header role="banner"
  class="bg-base-200/80 backdrop-blur-sm fixed top-0 left-0 right-0 z-50 border-b border-base-300">
  <div class="max-w-4xl mx-auto px-6 h-16 flex items-center justify-between">
    <div class="text-xl font-bold text-primary">
      <a href="/" class="hover:opacity-90 transition">Z8</a>
    </div>
    <nav aria-label="Primary" class="text-sm">
      <ul class="flex items-center gap-4">
        <li>
          <a href="/register"
             class="px-2 py-1 rounded-md hover:text-primary focus:outline-none focus-visible:ring"
             {% if page_id and page_id.startswith('register') %} aria-current="page" class="text-primary font-semibold px-2 py-1 rounded-md"{% endif %}>
            Register
          </a>
          <a href="/login"
             class="px-2 py-1 rounded-md hover:text-primary focus:outline-none focus-visible:ring"
             {% if page_id and page_id.startswith('login') %} aria-current="page" class="text-primary font-semibold px-2 py-1 rounded-md"{% endif %}>
            Login
          </a>
          <a href="/about"
             class="px-2 py-1 rounded-md hover:text-primary focus:outline-none focus-visible:ring"
             {% if page_id and page_id.startswith('about') %} aria-current="page" class="text-primary font-semibold px-2 py-1 rounded-md"{% endif %}>
            About
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
{%- endmacro %}

{% macro Footer() -%}
<footer
  class="footer sm:footer-horizontal footer-center bg-base-200 text-base-content
         fixed bottom-0 left-0 right-0 z-40 border-t border-base-300 h-16">
  <aside>
    <p>© 2025 Z8ter — Open Source under the MIT License.</p>
  </aside>
</footer>
{%- endmacro %}

{% macro HeaderAuth() -%}
<header role="banner"
  class="bg-base-200/80 backdrop-blur-sm fixed top-0 left-0 right-0 z-50 border-b border-base-300">
  <div class="max-w-4xl mx-auto px-6 h-16 flex items-center justify-between">
    <div class="text-xl font-bold text-primary">
      <a href="/app" class="hover:opacity-90 transition">Z8</a>
    </div>
    <nav aria-label="Primary" class="text-sm">
      <ul class="flex items-center gap-4">
        <li>
          <form action="/api/auth/logout" method="post" class="inline">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <button type="submit"
                    class="px-2 py-1 rounded-md hover:text-primary focus:outline-none focus-visible:ring">
              Logout
            </button>
          </form>
        </li>
      </ul>
    </nav>
  </div>
</header>
{%- endmacro %}