{% extends "base.jinja" %}
{% block content %}
{% from "macros/tailwind.jinja" import h1 %}

<!-- Hero -->
<section class="hero bg-base-200 rounded-2xl p-8 md:p-12">
  <div class="hero-content flex-col md:flex-row gap-10">
    <div class="shrink-0">
      <div class="mask mask-hexagon bg-primary/10 p-6">
        <span class="text-5xl">{{ page_content.hero.emoji }}</span>
      </div>
    </div>
    <div>
      {{ h1(page_content.hero.title) }}
      <p class="py-4 text-lg opacity-90">
        {{ page_content.hero.subtitle | safe }}
      </p>
      {% if page_content.hero.cta %}
      <div class="flex flex-wrap items-center gap-3">
        <a class="btn btn-primary" href="{{ page_content.hero.cta.href }}" target="_blank" rel="noopener">
          {{ page_content.hero.cta.label }}
        </a>
      </div>
      {% endif %}
    </div>
  </div>
</section>

<!-- Badges / stats -->
<section class="mt-8">
  <div class="stats shadow w-full">
    {% for b in page_content.badges %}
    <div class="stat">
      <div class="stat-title">{{ b.title }}</div>
      <div class="stat-value {% if b.highlight %}text-{{ b.highlight }}{% endif %}">{{ b.value }}</div>
      <div class="stat-desc">{{ b.desc }}</div>
    </div>
    {% endfor %}
  </div>
</section>

<!-- Two-column: Quickstart + Try API -->
<section class="mt-10 grid md:grid-cols-2 gap-8">
  <!-- Quickstart -->
  <div class="card bg-base-200">
    <div class="card-body">
      <h2 class="card-title">{{ page_content.sections.quickstart.title }}</h2>
      <p class="opacity-80">{{ page_content.sections.quickstart.subtitle }}</p>
      <pre class="mt-3 p-4 rounded-lg bg-base-300 overflow-x-auto text-sm">
<code>{% for line in page_content.sections.quickstart.code %}{{ line }}
{% endfor %}</code>
      </pre>
    </div>
  </div>

  <!-- Try API -->
  <div class="card bg-base-200">
    <div class="card-body">
      <h2 class="card-title">{{ page_content.sections.try_api.title }}</h2>
      <p class="opacity-80">{{ page_content.sections.try_api.subtitle }}</p>
      <div class="flex gap-3">
        <button id="{{ page_content.sections.try_api.button_id }}" class="btn btn-outline btn-primary">
          {{ page_content.sections.try_api.button_label }}
        </button>
      </div>
      <div id="api-response" class="mt-4 text-sm"></div>
      <span id="try-api-endpoint" data-endpoint="{{ page_content.sections.try_api.endpoint }}"></span>
    </div>
  </div>
</section>
{% endblock %}
