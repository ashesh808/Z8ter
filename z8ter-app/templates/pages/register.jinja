{% extends "base.jinja" %}
{% block content %}
  <div class="max-w-sm mx-auto mt-10">
    {% if page_content and page_content.headings and page_content.headings.subheading %}
      <h1 class="text-2xl font-semibold">{{ page_content.headings.heading}}</h1>
      <h2 class="text-sm text-slate-500 mt-1">{{ page_content.headings.subheading }}</h2>
    {% endif %}

    {% if error %}
      <p class="mt-4 text-sm text-red-700 bg-red-50 border border-red-200 rounded px-3 py-2">{{ error }}</p>
    {% endif %}

    <form action="/register" method="post" novalidate
          class="mt-6 space-y-4 bg-white/60 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl p-5 shadow-sm">
      <input type="hidden" name="csrf_token" value="{{ csrf_token }}"/>

      <div>
        <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-200">Email</label>
        <input id="email" name="email" type="email" autocomplete="email" required
               class="mt-1 w-full rounded-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-900 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-slate-700 dark:text-slate-200">Password</label>
        <input id="password" name="password" type="password" autocomplete="new-password" required
               class="mt-1 w-full rounded-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-900 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <div>
        <label for="password2" class="block text-sm font-medium text-slate-700 dark:text-slate-200">Confirm password</label>
        <input id="password2" name="password2" type="password" autocomplete="new-password" required
               class="mt-1 w-full rounded-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-900 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <button type="submit"
              class="w-full inline-flex justify-center rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Create account
      </button>
    </form>

    <p class="text-center mt-3 text-sm">
      Already have an account?
      <a href="/login" class="text-blue-600 hover:underline">Sign in</a>
    </p>
  </div>
{% endblock %}
